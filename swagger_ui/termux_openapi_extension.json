{
  "openapi": "3.0",
  "info": {
    "title": "GD-AURORAPERO Termux Extension",
    "version": "1.0.0"
  },
  "paths": {
    "/termux/shell": {
      "post": {
        "summary": "Exécute une commande bash au sur de l'app Termux relépouée par un serveur",
        "parameters": {
          "cmd": {
            "type": "string",
            "description": "La commande Termux a étès executée."
          },
          "timeout": {
            "type": "number",
            "description": Temps max d'attente avant unite forcée.
          },
          "sudo": {
            "type": "boolean",
            "default": false,
            "description": "Exäcuter comme que sudo si necessaire."
          }
        },
        "responses": {
          "200": {
            "description": "Resénse succès de Termux: stdout, stderr, exit_code, timestamp.",
            "content": {
              "application/json": {
                "type": "object",
                "properties": {
                  "stdout": {"type": "string"},
                  "stderr": {"type": "string"},
                  "exit_code": {"type": "integer"},
                  "timestamp": {"type": "string"}
                }
              }
            }
        }
      }
    }
  }
}